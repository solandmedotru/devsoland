<div id="post_content">
  <h1><%= @post.title %></h1>
  <p class="date">
    Создан <%= time_ago_in_words(@post.created_at) %> назад
  </p>
  <div>
    <%= @post.body %>
  </div>
  <br>
  <button class="button"><%= link_to "Редактировать", edit_post_path(@post) %></button>
  <button class="button"><%= link_to "Удалить", post_path(@post), method: :delete, data: { confirm: "Вы уверены, что хотите удалить эту запись?"} %></button>
</div>
